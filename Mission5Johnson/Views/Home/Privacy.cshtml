@{
    ViewData["Title"] = "Private Lessons";
}
<h1>@ViewData["Title"]</h1>

<h3 style="color: blue; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Tutoring Calculator</h3>

<div>
    <p>Hannah is a very generous person and is willing to teach others how to do a flip or two...for a price.</p>
</div>
<form>
    <div>
        <label for="hours">Number of Hours:</label>
        <input type="number" id="hours" min="0" step="0.5" />
    </div>
    <div>
        <label>Hourly Rate:</label>
        <input type="text" id="hourlyRate" value="20" readonly />
    </div>
    <div>
        <button id="calculateBtn">Calculate Total</button>
    </div>
    <div>
        <label>Total:</label>
        <input type="text" id="total" readonly />
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
}

